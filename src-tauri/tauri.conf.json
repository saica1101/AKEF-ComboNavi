{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AKEF ComboNavi",
  "version": "0.1.0",
  "identifier": "com.akef.combonavi",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AKEF ComboNavi",
        "width": 400,
        "height": 150,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "focus": false,
        "x": 100,
        "y": 100,
        "visible": true
      },
      {
        "label": "settings",
        "title": "AKEF ComboNavi - 設定",
        "url": "/settings",
        "width": 565,
        "height": 711,
        "visible": true,
        "center": true,
        "resizable": false,
        "decorations": true,
        "skipTaskbar": false,
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "Japanese",
          "English"
        ]
      }
    }
  }
}